<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_top_rated">

    <fragment
        android:id="@+id/nav_top_rated"
        android:name="com.ismail.creatvt.moviemania.features.MovieListFragment"
        android:label="@string/menu_top_rated_movies"
        tools:layout="@layout/fragment_movies_list">
        <argument android:name="url"
            android:defaultValue=""
            />
    </fragment>
    <fragment
        android:id="@+id/nav_popular"
        android:name="com.ismail.creatvt.moviemania.features.MovieListFragment"
        android:label="@string/menu_popular_movies"
        tools:layout="@layout/fragment_movies_list" />
    <fragment
        android:id="@+id/nav_latest_movies"
        android:name="com.ismail.creatvt.moviemania.features.MovieListFragment"
        android:label="@string/menu_latest_movies"
        tools:layout="@layout/fragment_movies_list" />
    <fragment
        android:id="@+id/nav_upcoming"
        android:name="com.ismail.creatvt.moviemania.features.MovieListFragment"
        android:label="@string/menu_upcoming_movies"
        tools:layout="@layout/fragment_movies_list" />
</navigation>